<div class="header" id="signed_in">
	<% if logged_in? %>
	<div class="user_logged_in">
		<span class="fa-stack fa-lg"> <i class="fa fa-square-o fa-stack-2x"></i> <i class="fa fa-user fa-stack-1x"></i> </span>
		<%= link_to current_user.username, @current_user %>
		| <%= link_to "Log Out", logout_path, method: :delete, :class => "fa fa-" %>
	</div>
	<% end %>
</div>

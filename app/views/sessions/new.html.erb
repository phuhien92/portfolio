<div class="container">
	<% flash.each do |key, value| %>
        <div class="alert bg-<%= key %>"><%= value %></div>
      <% end %>
	<div class="row center-block signup-form">
		<div class="col-md-6 col-md-offset-3">
				<h1 class="center-block">Log in</h1>

			<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :username %>
			<%= f.text_field :username %>

			<%= f.label :password %>
			<%= f.password_field :password %>
	      </br></br>
			<%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
			<% end %>

			<p>
				New user? <%= link_to "Sign up now!", signup_path %>
			</p>
		</div>
	</div>

</div>
